generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "linux-arm64-openssl-1.1.x", "linux-musl"]
  output        = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())
  size      Int      @default(0)
  name      String
  url       String
  key       String   @unique
  memberID  String
  tags      String[]
  Member    Member   @relation(fields: [memberID], references: [id])

  @@map("upload")
}

model Member {
  id          String   @id @unique @default(cuid())
  createdAt   DateTime @default(now())
  username    String   @unique
  password    String
  accessKey   String
  secretKey   String
  bucket      String
  endpoint    String
  tags        String[]
  language    String   @default("ru")
  maxGB       Int      @default(1)
  showPreview Boolean  @default(false)
  Upload      Upload[]

  @@map("member")
}
